@model GeradorRelatoriosWeb.Models.Filtros.FiltroPendentesPreparacao
@{
    ViewData["Title"] = "Pendentes Preparacao";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<h1>Pendentes Preparação</h1>
<div class="row">
    <div class="col-md-12">
        <div class="form-group panel">
            <div class="panel-heading"><h4>Filtro</h4></div>
            <div class="panel-body">
                <form asp-action="ListarPendentesPreparacao">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiasPendentes" class="control-label"></label>
                                <input asp-for="DiasPendentes" class="form-control" />

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="submit" id="btnVisualizar" value="Visualizar" class="btn btn-primary" />
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="form-group">
                                <input type="submit" id="btnExportar" asp-action="ExportarPendentesPreparacao" value="Exportar XLS" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PendentesPreparacao.FirstOrDefault().CodigoInfracaoPreAutuacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PendentesPreparacao.FirstOrDefault().DataHoraInfracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PendentesPreparacao.FirstOrDefault().DataConferencia2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PendentesPreparacao.FirstOrDefault().DataArbitragem)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PendentesPreparacao)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoInfracaoPreAutuacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraInfracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataConferencia2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataArbitragem)
            </td>
        </tr>
        }
    </tbody>
</table>
