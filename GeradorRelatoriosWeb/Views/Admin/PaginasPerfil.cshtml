@model GeradorRelatoriosWeb.Models.Cadastros.PaginasPerfil

@{
    ViewData["Title"] = "Relacionamento Páginas/Perfil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/js/Admin/PaginasPerfil.js"></script>
<h1>Relacionamento Páginas/Perfil</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="PaginasPerfil">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <h4><label asp-for="IdPerfil" class="control-label"></label></h4>
                        <select id="cmbPerfil" asp-items="@ViewBag.Perfis" asp-for="IdPerfil" class="form-control">
                            <option value="0" selected="selected">Selecione</option>
                        </select>
                        <span asp-validation-for="IdPerfil" class="text-danger"></span>
                    </div>
                    @if (TempData["Messagem"] != null)
                    {
                        <p class="alert alert-info">@TempData["Messagem"]</p>
                    }
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <h4><label asp-for="IdsPaginas" class="control-label"></label></h4>
                        @for (Int32 i = 0; i < this.Model.IdsPaginas.Length; i++)
                        {
                            <input name="Selecionados" class="chkBox" type="checkbox" value="@Model.IdsPaginas[i].Id" />
                            <label>@Model.IdsPaginas[i].NomeMenu</label>
                            <br />
                        }
                    </div>
                </div>
            </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

